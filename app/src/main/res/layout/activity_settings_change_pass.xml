<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghost_white"
    android:orientation="vertical"
    tools:context="id.technow.kjurseller.SettingsChangePassActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_settings_change_pass" />

    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/light_grey"
        android:elevation="@dimen/_2sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_6sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_23sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_weight="0.5"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/old_password"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edtOldPass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_weight="0.5"
            android:hint="********"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:textColor="@color/gray"
            android:textSize="@dimen/_12ssp"
            app:backgroundTint="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_6sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_weight="0.5"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/new_password"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edtNewPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_weight="0.5"
                android:hint="********"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12ssp"
                app:backgroundTint="@android:color/transparent" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_23sdp"
            android:background="#4d4f9a94" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_6sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_weight="0.6"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/new_confirm_password"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edtNewConfirmPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_weight="0.4"
                android:hint="********"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12ssp"
                app:backgroundTint="@android:color/transparent" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_14sdp"
        android:background="@drawable/btn_rounded_primary"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp" />
</LinearLayout>
