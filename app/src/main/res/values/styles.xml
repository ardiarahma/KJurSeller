<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorGreyDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HintText" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ErrorText" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextInputLayoutWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white_smoke</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="colorControlNormal">@color/white_smoke</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
    </style>

</resources>
